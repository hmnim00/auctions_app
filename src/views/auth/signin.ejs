<%- include ('../partials/header') %>

  <div class="col-md-6 col-lg-3 mx-auto">
    <div class="card">
      <div class="card-header bg-primary">
        <h4 class="text-center text-white">Sign In</h4>
      </div>
      <div class="card-body">
        
        <!-- TODO alerts -->
        <%- include('../partials/messages') %>
        <!-- TODO alerts -->

        <form action="/user/signin" method="post">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Email" value="<%=(typeof inputData!='undefined')? inputData.email:''%>">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.email!='undefined' )? errors.email.msg:''%></p>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%></p>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-bg">Sign In</button>
          </div>
        </form>
      </div>
      <div class="card-footer">
        <span>Don't have an account? <a href="/user/signup">Sign up here</a>.</span>
      </div>
    </div>
  </div>

<%- include ('../partials/footer') %>