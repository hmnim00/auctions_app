<%- include ('../partials/header') %>

  <div class="row">
    <div class="col-md-7 mx-auto">
      <h1>Add new listing</h1>
      <form action="/listing/create" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" class="form-control"
            value="<%=(typeof inputData!='undefined')? inputData.title:''%>" autofocus>
          <p style="color: red;">
            <%=(typeof errors!='undefined' && typeof errors.title!='undefined' )? errors.title.msg:''%>
          </p>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5" class="form-control"><%=(typeof inputData!='undefined')? inputData.description:''%></textarea>
          <p style="color: red;">
            <%=(typeof errors!='undefined' && typeof errors.description!='undefined' )? errors.description.msg:''%>
          </p>
        </div>
        <div class="form-group">
          <label for="inputGroup">File</label>
          <div class="input-group">
            <div class="custom-file">
              <input type="file" name="image" class="custom-file-input" id="inputGroup"
                aria-describedby="inputGroupFileAddon" required>
              <label class="custom-file-label" for="inputGroupFile">Choose file</label>
            </div>
          </div>
          <p style="color: red;">
            <%=(typeof errors!='undefined' && typeof errors.image!='undefined' )? errors.image.msg:''%>
          </p>
        </div>
        <div class="form-group">
          <label for="price">Initial Price</label>
          <input type="text" name="price" id="initialPrice" class="form-control"
            value="<%=(typeof inputData!='undefined')? inputData.price:''%>">
          <p style="color: red;">
            <%=(typeof errors!='undefined' && typeof errors.price!='undefined' )? errors.price.msg:''%>
          </p>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  <%- include ('../partials/footer') %>